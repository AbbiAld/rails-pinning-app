<div class="header">
  <h1>
    <i class="fas fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>
</div>

<div class="show-pin">
  <p><%= "#{@pin.text}" %></p>

  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
    <%= link_to "#{@pin.url}", "#{@pin.url}", html_options = {class: "url", target: "_blank"} %>
  </p>
</div>
<br/>
<a href="/">
  <i class="fas fa-angle-double-left"></i>
  Back to Home
</a>
